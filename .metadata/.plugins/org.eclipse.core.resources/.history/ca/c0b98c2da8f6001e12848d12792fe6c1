/* USER CODE BEGIN PD */
#define PREAMBLE "\r\n!START!\r\n"
#define DELTA_PREAMBLE "\r\n!DELTA!\r\n"
#define SUFFIX "!END!\r\n"
#define DATA_SIZE sizeof(PREAMBLE) + 144 * 174 + sizeof(SUFFIX)
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;
DMA_HandleTypeDef hdma_usart2_rx;
DMA_HandleTypeDef hdma_usart3_tx;

PCD_HandleTypeDef hpcd_USB_OTG_FS;

/* USER CODE BEGIN PV */
uint8_t transmission_flag = 0;
uint8_t sizeReceived = 0;
uint8_t buffer[DATA_SIZE];
uint16_t dataSize = 0;
char dataSizeBuffer[10];
uint8_t imageSent = 0;
uint8_t OK_SIG = 1;
uint8_t firstTransmission = 1;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
