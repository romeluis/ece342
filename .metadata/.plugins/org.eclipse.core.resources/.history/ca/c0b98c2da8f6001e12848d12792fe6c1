/* USER CODE BEGIN 4 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart) {
	if (sizeReceived) {
		transmission_flag = 1;
		sizeReceived = 0;
	} else {
		sizeReceived = 1;
		if (firstTransmission) {
			dataSizeBuffer[0] = dataSizeBuffer[1];
			dataSizeBuffer[1] = dataSizeBuffer[2];
			dataSizeBuffer[2] = dataSizeBuffer[3];
			dataSizeBuffer[3] = dataSizeBuffer[4];
			dataSizeBuffer[4] = dataSizeBuffer[5];
			dataSizeBuffer[5] = dataSizeBuffer[6];
			dataSizeBuffer[6] = dataSizeBuffer[7];
			firstTransmission = 0;
		}
		dataSize = atoi(dataSizeBuffer);
		memset(dataSizeBuffer, 0, sizeof(dataSizeBuffer));

		//Send confirmation
		HAL_UART_Transmit(&huart2, &OK_SIG, 1, 100);
		HAL_GPIO_WritePin(GPIOB, LD1_Pin, GPIO_PIN_SET);

		//Ready for new data
		HAL_UART_Receive_DMA(&huart2, buffer, (uint16_t)dataSize);
	}
}

void HAL_UART_TxCpltCallback(UART_HandleTypeDef *huart) {
	if (!imageSent && huart == &huart3) {
		imageSent = 1;
	}
}
/* USER CODE END 4 */

